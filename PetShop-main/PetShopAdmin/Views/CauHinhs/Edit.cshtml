@model PetShop.Models.CauHinh

@{
    ViewData["Title"] = "Edit";
}

<div id="page-wrapper">
    <div class="main-page">
        <div class="blank-page widget-shadow scroll" id="style-2 div1">
            <h2>Edit</h2>

            <form>
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>CauHinh</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.Id)

                    <div class="form-group">
                        @Html.LabelFor(model => model.TenCauHinh, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenCauHinh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenCauHinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.GiaTriCauHinh, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @if (@Model.GiaTriCauHinh.StartsWith("img/"))
                            {
                                <img src="~/@Model.GiaTriCauHinh" class="preview-picture" style="width:480px; height:300px" id="GiaTriCauHinh" />
                                <input type="file" class="upload-single-input form-control" name="GiaTriCauHinh" />
                            }
                            else
                            {
                                <textarea name="ckGiaTriCauHinh">@Model.GiaTriCauHinh</textarea>
                            }
                            @Html.ValidationMessageFor(model => model.GiaTriCauHinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default upload-single-btn" id="edit-cauhinh" />
                        </div>
                    </div>
                </div>
            </form>

            <div>
                @Html.ActionLink("Back to List", "Index")
            </div>
        </div>
    </div>
</div>

@section scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/js/core.js"></script>
    <script src="~/js/uploadfile.js"></script>
    <script src="~/js/cauhinh.js"></script>

}