@model IEnumerable<PetShop.Models.Product>
@{
    ViewData["Title"] = "Products";
    BannerImage bannerImage = ViewBag.SpecialOffer;
}

<!-- Products Start -->
<div class="container-fluid py-5">
    <div class="container">
        
        <div class="border-start border-5 border-primary ps-5 mb-5" style="max-width: 600px;">
            <h6 class="text-primary text-uppercase">Products</h6>
            <h1 class="display-5 text-uppercase mb-0">@ViewBag.Categories</h1>
        </div>
            <h1 class="display-5 text-uppercase mb-0">@ViewBag.Found</h1>
        @using (Html.BeginForm("Index", "Products", FormMethod.Get))
        {
            @Html.TextBox("name")
            <input type="submit" name="submit" />
        }
        <div class="owl-carousel product-carousel">
            @foreach (var item in Model)
            {
                <div class="pb-5">
                    <div class="product-item position-relative bg-light d-flex flex-column text-center">
                        @*@{
                            var img_src = "https://localhost:7087" + @Html.DisplayFor(modelItem => item.Image);
                            <img src="@img_src">
                        }*@
                             <img src="data:image;base64,@item.Image"/>
                        <h6 class="text-uppercase">@Html.DisplayFor(modelItem => item.Name)</h6>
                        <h5 class="text-primary mb-0">$@Html.DisplayFor(modelItem => item.Price)</h5>
                        <div class="btn-action d-flex justify-content-center">
                            <a class="btn btn-primary py-2 px-3" asp-route="addcart" asp-route-productid="@item.Id" class="btn btn-secondary btn-sm float-right"><i class="bi bi-cart"></i></a>
                            <a class="btn btn-primary py-2 px-3" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i></a>
                        </div>
                    </div>
                </div>
            }
        </div>
        
    </div>
</div>
<!-- Products End -->
<!-- Offer Start -->
@{
    var banner_img = "https://localhost:7087" + @bannerImage.Image;
}
<div class="container-fluid bg-offer my-5 py-5" style="background-image:url(@banner_img)>
    <div class="container py-5">
        <div class="row gx-5 justify-content-start">
            <div class="col-lg-7">
                <div class="border-start border-5 border-dark ps-5 mb-5">
                    <h6 class="text-dark text-uppercase">@bannerImage.Title</h6>
                    <h1 class="display-5 text-uppercase text-white mb-0">@bannerImage.SubTitle</h1>
                </div>
                <p class="text-white mb-4">@bannerImage.Description</p>
                <a href="" class="btn btn-light py-md-3 px-md-5 me-3">Shop Now</a>
                <a href="" class="btn btn-outline-light py-md-3 px-md-5">Read More</a>
            </div>
        </div>
    </div>
</div>
