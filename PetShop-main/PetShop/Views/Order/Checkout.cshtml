@model List<PetShop.Models.CartItem>
@{
    ViewBag.Title = "Checkout";
}


<div class="colorlib-loader"></div>

<div id="page">
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="bread"><span><a href="index.html">Home</a></span> / <span>Checkout</span></p>
                </div>
            </div>
        </div>
    </div>
    <div class="colorlib-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <form asp-action="Checkout" method="post" class="colorlib-form">
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <h2>Billing Details</h2>
                        <div class="row">


                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="fname">Name</label>
                                    <input type="text" id="fname" name="Name" class="form-control" placeholder="Your Name">
                                </div>
                            </div>



                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="fname">Adress</label>
                                    <input type="text" id="address" name="Address" class="form-control" placeholder="Your adress">
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="Comment">Comment</label>
                                    <textarea id="comment" class="form-control" name="Comment" rows="4" placeholder="Enter your comment"></textarea>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Phone">Phone Number</label>
                                    <input type="number" id="phone" name="PhoneNumber" class="form-control" placeholder="Your phone number">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Phone">Phone Number</label>
                                    <input type="text" id="phone" class="form-control" placeholder="Your phone number">

                            <div class="row">
                                <div class="col-md-12 text-center" style="padding-top:16px;">
                                    <input class="btn btn-primary" type="submit" value="Place an order"></input>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>


                <div class="col-lg-4">
                    <div class="row">
                        @if (Model.Count > 0)
                        {
                            int? total = 0;
                            int stt = 1;
                            <div class="col-md-12">
                                <div class="cart-detail">
                                    <h2>Cart Detail</h2>
                                    <ul>
                                        @foreach (var cartitem in Model)
                                        {
                                            int price = int.Parse(cartitem.product.Price);
                                            var thanhtien = cartitem.quantity * price;
                                            total += thanhtien;

                                            <div>
                                                <td>@(cartitem.quantity)</td>
                                                <td>@cartitem.product.Name</td>
                                                <td>$@(cartitem.product.Price)</td>
                                            </div>
                                        }
                                        <li><span>Order total</span> <span>$@(total)</span></li>
                                    </ul>
                                </div>
                            </div>
                        }

                        <div class="w-100"></div>

                        <div class="col-md-12">
                            <div class="cart-detail">
                                <h2>Payment Method</h2>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio"> Direct Bank Tranfer</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio"> Check Payment</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio"> Paypal</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="checkbox">
                                            <label><input type="checkbox" value=""> I have read and accept the terms and conditions</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

